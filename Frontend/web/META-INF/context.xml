<?xml version="1.0" encoding="UTF-8"?>
<Context>

    <!-- BonesCP -->
    <Resource
        name="jdbc/Foodist"
        auth="Container"
        type="javax.sql.DataSource"
        username="root"
        password="root"
        driverClassName="com.mysql.jdbc.Driver"
        factory="com.jolbox.bonecp.BoneCPDataSource"
        jdbcUrl="jdbc:mysql://localhost:3306/Foodist?autoReconnect=true&amp;zeroDateTimeBehavior=convertToNull&amp;jdbcCompliantTruncation=false"
        validationQuery="select 1"
        maxIdle="500"
        testWhileIdle="true"
        testOnBorrow="true"
        testOnReturn="false"
        validationInterval="30000"
        timeBetweenEvictionRunsMillis="30000"
        minEvictableIdleTimeMillis="30000"
        maxActive="1000"
        minIdle="50"
        maxWait="10000"
        initialSize="10"
        removeAbandoned="true"
        removeAbandonedTimeout="120"
        logAbandoned="true"
    />

</Context>
